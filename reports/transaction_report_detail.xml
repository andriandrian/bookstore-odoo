<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="transaction_report_template">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="o.ref"/>
                        </h2>
                        <div>
                            <div>
                                <strong>Transaction Date : </strong>
                                <span t-field="o.date"/>
                        </div>
                            <strong>Total : </strong>
                            <span t-field="o.total"/>
                        </div>
                        <br />
                        <h4>Transaction Details</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <!-- <th>Book Ref</th> -->
                                    <th>Book Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.transaction_ids" t-as="d">
                                    <!-- <td><span t-esc="d.ref"/></td> -->
                                    <td><span t-esc="d.name.name"/></td>
                                    <td><span t-esc="d.qty"/></td>
                                    <td><span t-esc="d.price"/></td>
                                    <td><span t-esc="d.subtotal"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>


